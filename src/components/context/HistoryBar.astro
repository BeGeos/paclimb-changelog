---
interface Props {
  paths: Record<string, string>[];
  current?: string;
}

const { paths, current }: Props = Astro.props;
---

<ul class="max-w-full flex gap-2 text-xs font-light overflow-y-auto">
  {
    paths.map((path) => (
      <a href={path.link} class="flex gap-1">
        <li class="opacity-40 hover:opacity-100 transition-opacity duration-300">
          {path.name}
        </li>
        <span class="opacity-40">&rarr;</span>
      </a>
    ))
  }
  <li class="opacity-100 font-semibold text-pa-bright-blue">{current}</li>
</ul>
