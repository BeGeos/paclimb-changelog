---
const { lang } = Astro.params;

const isItalianActive = lang === 'it';
const isEnglishActive = lang === 'en';
---

<header class="min-w-full py-4 shadow-md">
  <nav class="max-w-[90%] mx-auto flex justify-between">
    <div>
      <h1 class="font-bold text-lg lg:text-xl">PaClimb - Change Logs</h1>
    </div>
    <ul id="select-language" class="flex gap-2">
      <li
        title="italiano"
        class="hover:opacity-100 transition:opacity duration-300"
        class:list={[
          { 'opacity-100': isItalianActive, 'opacity-40': !isItalianActive },
        ]}
      >
        <a href="/it/beta">IT</a>
      </li>
      <li
        title="english"
        class="hover:opacity-100 transition:opacity duration-300"
        class:list={[
          { 'opacity-100': isEnglishActive, 'opacity-40': !isEnglishActive },
        ]}
      >
        <a href="/en/beta">EN</a>
      </li>
    </ul>
  </nav>
</header>
